<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Registro Castellani">
    <meta name="author" content="Castellani Vidrios">
    <meta name="generator" content="Hugo 0.108.0">
    <title>Registro Castellani</title>
    <link rel="shortcut icon" href="img/favicon.ico" type="image/x-icon">

    <link href="css/bootstrap.min.css" rel="stylesheet">



    <!-- Custom styles for this template -->
    <link href="css/sign-in.css" rel="stylesheet">

</head>

<body class="text-center">

    <main class="form-signin w-100 m-auto text-center shadow-lg p-3 ">
        <form action="/register" method="POST">
            <div class="card rounded-4">
                <img src="img/foto_registro-03.png" class="card bg-primary"
                    style=" border-top-left-radius: .3rem; border-top-right-radius: .3rem;" alt="FotoCastellani">
                <!-- <img class="mb-4" src="img/logoCastellani.png" alt="" width="90" height="100"> -->
                <h1 for="ageRangeField" class="font-weight-bold h4 mb-3 mt-3 fw-normal">Informacion de Registro</h1>

                <div class="form-floating">
                    <input type="text" class="form-control " id="user" name="user" required="" placeholder="numlegajo">
                    <label class="font-weight-light" for="user">Numero de Legajo</label>
                </div>
                <div class="form-floating">
                    <input type="text" class="form-control" id="name" name="name" required="" placeholder="name">
                    <label for="name">Nombre Completo</label>
                </div>
                <div class="form-floating">
                    <input type="password" class="form-control" required="" id="pass" name="pass" placeholder="Password">
                    <label for="pass">Contraseña</label>
                </div>

                <!-- <div class="checkbox mb-3">
      <label>
        <input type="checkbox" value="remember-me"> Recordame
      </label>
    </div> -->
                <button type="submit" class="btn btn-outline-primary">Registrar</button>
                <a href="/" class="w-100 btn btn-outline-cancelar" style="margin-bottom: 3px ;"
                   >Cancelar</a>
                <p class="mt-3 mb-3 text-muted">Copyright &copy; Castellani 2016 – 2023</p>
        </form>
    </main>
    
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script> 
<% if(alert) { %>
<script>
  Swal.fire({
    title:'<%= alertTitle %>',
    text:'<%= alertMessage %>',
    icon:'<%= alertIcon %>',
    showConfirmButton:'<%= showConfirmButton %>',
    timer:'<%= timer %>'
  }).then(()=>{
    window.location = '/<%= ruta %>'
  })
</script>
<% } %>
</body>

</html>